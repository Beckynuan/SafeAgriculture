<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="My_plan.PlanFragment2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <Button
            android:id="@+id/PCbutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/insects"
            android:text="害虫"
            android:textColor="@color/black"
            app:backgroundTint="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="vertical"
        android:visibility="visible"

        >

        <Button
            android:id="@+id/PCbutton2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/disease"
            android:text="疾病"
            android:textColor="@color/black"
            app:backgroundTint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="vertical"
        android:visibility="visible"

        >

        <Button
            android:id="@+id/PCbutton3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/weeds"
            android:text="杂草"
            android:textColor="@color/black"
            app:backgroundTint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="vertical"
        android:visibility="visible"

        >

        <Button
            android:id="@+id/PCbutton4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/rats"
            android:text="鼠疫"
            android:textColor="@color/black"
            app:backgroundTint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:visibility="visible"

        >

        <Button
            android:id="@+id/PCbutton5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/snails"
            android:text="蛇灾"
            android:textColor="@color/black"
            app:backgroundTint="@color/white" />
    </LinearLayout>

</LinearLayout>