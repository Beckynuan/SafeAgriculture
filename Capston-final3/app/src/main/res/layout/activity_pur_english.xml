<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Purchase.PurEnglishFra">

    <TextView
        android:id="@+id/ETitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:gravity="left"
        android:text="No Internet"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <TextView
        android:id="@+id/EStatement1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Statement"
        android:textColor="#FF3300"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/EChecklist1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETitle1"
        app:layout_constraintVertical_bias="0.119"
        tools:ignore="DuplicateIds,HardcodedText,MissingConstraints" />

    <me.biubiubiu.justifytext.library.JustifyTextView
        android:id="@+id/EChecklist1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="checklist"
        android:textColor="#2FF306"
        android:textSize="16sp"
        android:textStyle="bold"

        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/Etext1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EStatement1"
        app:layout_constraintVertical_bias="0.119"
        tools:ignore="DuplicateIds,HardcodedText,MissingConstraints" />

    <me.biubiubiu.justifytext.library.JustifyTextView
        android:id="@+id/Etext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="36dp"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        tools:ignore="DuplicateIds,HardcodedText,MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>