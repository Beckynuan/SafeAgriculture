<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="My_plan.PlanFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <Button
            android:id="@+id/Pbutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/insects"
            android:text="Insects"
            android:textColor="@color/black"
            app:backgroundTint="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="vertical"
        android:visibility="visible"

        >

        <Button
            android:id="@+id/Pbutton2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/disease"
            android:text="Diseases"
            android:textColor="@color/black"
            app:backgroundTint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="vertical"
        android:visibility="visible"

        >

        <Button
            android:id="@+id/Pbutton3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/weeds"
            android:text="Weeds"
            android:textColor="@color/black"
            app:backgroundTint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="vertical"
        android:visibility="visible"

        >

        <Button
            android:id="@+id/Pbutton4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/rats"
            android:text="Rats"
            android:textColor="@color/black"
            app:backgroundTint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:visibility="visible"

        >

        <Button
            android:id="@+id/Pbutton5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/snails"
            android:text="Snails"
            android:textColor="@color/black"
            app:backgroundTint="@color/white" />
    </LinearLayout>

</LinearLayout>