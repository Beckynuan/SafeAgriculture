<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="My_plan.Insect.InsectsActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ToolbarStyle" >
        <TextView
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:id="@+id/toolbar_title"
            android:text="Insects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/setbar_bg"
                android:text="Thiamethoxam"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black">
            </Button>


            <Button
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/setbar_bg"
                android:text="Abamectin"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black">
            </Button>

            <Button
                android:id="@+id/b3"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/setbar_bg"
                android:text="Chlorantraniliprole"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black">
            </Button>

            <Button
                android:id="@+id/b4"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/setbar_bg"
                android:text="Emamectin benzoate"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black">
            </Button>

            <Button
                android:id="@+id/b5"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/setbar_bg"
                android:text="Tefluthrin"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black">
            </Button>

            <Button
                android:id="@+id/b6"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/setbar_bg"
                android:text="Cyantraniliprole"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black">
            </Button>

            <Button
                android:id="@+id/b7"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/setbar_bg"
                android:text="Lambda-cyhalothrin"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black">
            </Button>

            <Button
                android:id="@+id/b8"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/setbar_bg"
                android:text="Cyfluthrin"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black">
            </Button>

            <Button
                android:id="@+id/b9"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/setbar_bg"
                android:text="Fipronil"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black">
            </Button>

            <Button
                android:id="@+id/b10"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/setbar_bg"
                android:text="Permethrin"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black">
            </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>