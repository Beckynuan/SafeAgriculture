<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PurChineseFra">

    <TextView
        android:id="@+id/Title2"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:text="重庆森林"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="《重慶森林》（英語：Chungking Express）是1994年的香港電影，由王家衛導演。此片是在王家衛的另一部電影《東邪西毒》後期製作期間完成的，為期僅為兩個月。電影主要場景為香港尖沙咀的重慶大廈及中環的蘭桂坊。中文標題「重慶森林」，隱喻指城市的水泥森林。影片描繪了一個反差，即使在人口稠密的香港居住，他們大多是孤獨和生活在自己的內心世界。該片於2005年被美國《時代》周刊評為「百大不朽電影」之一[1]。"
        android:textColor="#000000"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title2"
        tools:ignore="DuplicateIds,HardcodedText,MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>